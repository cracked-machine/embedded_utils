{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cleanup files",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceRoot}/build/CMakeFiles/test_suite.dir/",
                "${workspaceRoot}/coverage/*",
            ]
        },
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--no-warn-unused-cli",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-DCMAKE_BUILD_TYPE:STRING=Debug",
                "-DCMAKE_C_COMPILER:FILEPATH=/bin/x86_64-linux-gnu-gcc-10",
                "-Bbuild",
                "-G", "Ninja", ".",
            ]
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "--target", "clean",
                "--",
            ]
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "--target", "all", 
                "--",
            ]
        },
        {
            "label": "Run",
            "type": "process",
            "command": "${workspaceRoot}/build/test_suite",
            "problemMatcher": []
        },
        {
            "label": "Create HTML report",
            "type": "shell",
            "command": "gcovr",
            "args": [
                "-r", "${workspaceRoot}",
                "--exclude-directories", "'build/CMakeFiles/test_suite.dir/tests'", // exclude coverage search for tests
                "--exclude-unreachable-branches",
                "--html-self-contained",
                "--html-absolute-paths",
                "--html",
                "--html-details",
                "-o", "${workspaceRoot}/coverage/index.html",
            ]
        },
        {
            "label": "Create XML report",
            "type": "shell",
            "command": "gcovr",
            "args": [
                "-r", "${workspaceRoot}",
                "--exclude-directories", "'build/CMakeFiles/test_suite.dir/tests'", // exclude coverage search for tests
                "--exclude-unreachable-branches",
                "--xml",
                "--xml-pretty",
                "-o", "coverage/coverage.xml",
            ]
        },
        {
            "label": "convert html to pdf",
            "type": "shell",
            "command": "wkhtmltopdf ${workspaceRoot}/coverage/index.html ${workspaceRoot}/coverage/*.html ${workspaceRoot}/coverage/code.pdf"
        },
        {
            "label": "Open coverage report",
            "type": "shell",
            "command": "firefox",
            "args": [ "${workspaceRoot}/coverage/index.html" ]
        },
        {
            "label": "CheckTest",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Cleanup files",
                "CMake: Configure",
                "CMake: Clean",
                "CMake: Build",
                "Run"
            ],
            "problemMatcher": []
        },
        {
            "label": "Complete All Tasks",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Cleanup files",
                "CMake: Configure",
                "CMake: Clean",
                "CMake: Build",
                "Run",
                "Create HTML report",
                "Convert HTML to PDF",
                "Delete HTML",
                "Open coverage report"
            ],
            "problemMatcher": []
        }
    ]
}